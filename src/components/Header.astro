<header class="relative lg:relative sticky lg:static top-0 z-50 navbar-gradient backdrop-blur-lg border-b border-white/10">
	<nav class="max-w-7xl mx-auto px-6 lg:px-8">
		<div class="flex items-center justify-between py-4 lg:py-6">
			<!-- Logo -->
			<div class="flex-shrink-0">
				<a href="/" class="flex items-center group">
					<img 
						src="/images/logos/Logo_E_Horizon.webp" 
						alt="Ecomerciante"
						class="h-10 w-auto transition-all duration-300 group-hover:scale-105"
					/>
				</a>
			</div>

			<!-- Navigation Links - Desktop -->
			<div class="hidden lg:flex items-center space-x-8">
				<a href="#planes" class="nav-link">
					<span>Planes</span>
				</a>
				<a href="#como-funciona" class="nav-link">
					<span>C칩mo Funciona</span>
				</a>
				<a href="#afiliados" class="nav-link">
					<span>Afiliados</span>
				</a>
				<a href="#faq" class="nav-link">
					<span>FAQ</span>
				</a>
			</div>

			<!-- CTA Button - Desktop y Mobile -->
			<div class="flex items-center">
				<a 
					href="#contacto" 
					class="btn-primary"
				>
					游 Crear Mi Tienda
				</a>
			</div>
		</div>

	</nav>
</header>

<style>
	/* Gradiente lateral para navbar */
	.navbar-gradient {
		/* Fallback */
		background: #13161c;
		/* Gradiente con m치s blanco izquierda para mejor contraste del logo */
		background: -webkit-linear-gradient(to right, #374151, #1f2937, #13161c);
		background: linear-gradient(to right, #374151, #1f2937, #13161c);
	}
	
	/* Navegaci칩n desktop */
	.nav-link {
		@apply relative text-white/80 hover:text-white font-medium text-sm transition-all duration-300;
	}
	
	.nav-link::after {
		content: '';
		position: absolute;
		bottom: -4px;
		left: 0;
		width: 0;
		height: 2px;
		background: linear-gradient(90deg, #10B981, #1E3A8A);
		transition: width 0.3s ease;
	}
	
	.nav-link:hover::after {
		width: 100%;
	}
	
	/* Bot칩n CTA */
	.btn-primary {
		@apply bg-brand-success hover:bg-emerald-600 text-white px-4 py-2 text-xs lg:px-6 lg:py-3 lg:text-sm rounded-lg font-semibold transition-all duration-300 shadow-lg hover:shadow-xl hover:scale-105;
		box-shadow: 0 4px 20px rgba(16, 185, 129, 0.25);
	}
	
	.btn-primary:hover {
		box-shadow: 0 8px 30px rgba(16, 185, 129, 0.35);
	}
	
</style>

