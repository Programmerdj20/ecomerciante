---
export interface Props {
	variant?: 'primary' | 'secondary' | 'outline';
	size?: 'sm' | 'md' | 'lg';
	href?: string;
	class?: string;
}

const { 
	variant = 'primary', 
	size = 'md', 
	href,
	class: className = '' 
} = Astro.props;

const baseClasses = 'inline-flex items-center justify-center font-medium transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2';

const variants = {
	primary: 'bg-astro-primary hover:brightness-75 text-white focus:ring-astro-purple shadow-lg hover:shadow-xl glow-purple',
	secondary: 'bg-astro-surface hover:bg-astro-hover text-astro-text-primary focus:ring-astro-border border border-astro-border hover:glow-blue',
	outline: 'border-2 border-astro-purple text-astro-purple hover:bg-astro-primary hover:text-white focus:ring-astro-purple hover:glow-purple'
};

const sizes = {
	sm: 'px-3 py-1.5 text-sm rounded-md',
	md: 'px-6 py-3 text-base rounded-lg',
	lg: 'px-8 py-4 text-lg rounded-lg'
};

const classes = `${baseClasses} ${variants[variant]} ${sizes[size]} ${className}`;
---

{href ? (
	<a href={href} class={classes}>
		<slot />
	</a>
) : (
	<button class={classes}>
		<slot />
	</button>
)}