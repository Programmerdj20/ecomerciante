---
export interface Props {
  question: string;
  answer: string;
  id: string;
}

const { question, answer, id } = Astro.props;
---

<div class="faq-item border border-white/20 rounded-lg mb-4 overflow-hidden">
  <button 
    class="w-full px-6 py-4 text-left bg-white/10 hover:bg-white/20 transition-colors focus:outline-none focus:ring-2 focus:ring-brand-success/50 flex justify-between items-center"
    onclick={`toggleFAQ('${id}')`}
  >
    <span class="text-white font-medium text-lg">{question}</span>
    <svg 
      class="w-5 h-5 text-gray-300 transform transition-transform faq-icon" 
      id={`icon-${id}`}
      fill="none" 
      stroke="currentColor" 
      viewBox="0 0 24 24"
    >
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
    </svg>
  </button>
  
  <div class="faq-answer overflow-hidden transition-all duration-300 max-h-0" id={`answer-${id}`}>
    <div class="px-6 py-4 bg-black/20 border-t border-white/20">
      <p class="text-gray-300">{answer}</p>
    </div>
  </div>
</div>

<script>
  window.toggleFAQ = function(id: string) {
    const answer = document.getElementById(`answer-${id}`);
    const icon = document.getElementById(`icon-${id}`);
    
    if (answer && icon) {
      const isOpen = answer.style.maxHeight && answer.style.maxHeight !== '0px';
      
      if (isOpen) {
        answer.style.maxHeight = '0px';
        icon.style.transform = 'rotate(0deg)';
      } else {
        answer.style.maxHeight = answer.scrollHeight + 'px';
        icon.style.transform = 'rotate(180deg)';
      }
    }
  }
</script>